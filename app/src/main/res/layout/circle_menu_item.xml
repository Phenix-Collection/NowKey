<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="68dp"
    android:layout_height="72dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="@dimen/now_key_item_icon_width"
        android:layout_height="@dimen/now_key_item_icon_height"
        android:layout_centerInParent="true"
        android:src="@drawable/add_icon"
        android:tint="@color/white"
        android:visibility="gone" />

    <com.kuding.superball.floatview.FloatItemView
        android:id="@+id/app_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/app_icon_img"
            android:layout_width="@dimen/now_key_item_icon_width"
            android:layout_height="@dimen/now_key_item_icon_height"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/app_icon"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_icon_img"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textColor="@color/white" />

    </com.kuding.superball.floatview.FloatItemView>

    <FrameLayout
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/delete_icon_bg"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/delete_icon"
            android:tint="@color/white" />

    </FrameLayout>

</RelativeLayout>